<p id="notice"><%= notice %></p>

<h1>Diets</h1>

<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Drink</th>
      <th>Exercise</th>
      <th>Mental</th>
      <th>User</th>
      <th>Doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diets.each do |diet| %>
      <tr>
        <td><%= diet.food %></td>
        <td><%= diet.drink %></td>
        <td><%= diet.exercise %></td>
        <td><%= diet.mental %></td>
        <td><%= diet.user %></td>
        <td><%= diet.doctor %></td>
        <td><%= link_to 'Show', diet %></td>
        <td><%= link_to 'Edit', edit_diet_path(diet) %></td>
        <td><%= link_to 'Destroy', diet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

