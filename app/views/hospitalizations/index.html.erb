<p id="notice"><%= notice %></p>

<h1>Hospitalizations</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Admit</th>
      <th>Discharge</th>
      <th>Reasons</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hospitalizations.each do |hospitalization| %>
      <tr>
        <td><%= hospitalization.date %></td>
        <td><%= hospitalization.admit %></td>
        <td><%= hospitalization.discharge %></td>
        <td><%= hospitalization.reasons %></td>
        <td><%= link_to 'Show', hospitalization %></td>
        <td><%= link_to 'Edit', edit_hospitalization_path(hospitalization) %></td>
        <td><%= link_to 'Destroy', hospitalization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

